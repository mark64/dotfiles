{
    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".compiledb",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "compilationDatabaseDirectory": ".compiledb/"
            }
        }
    },
    "cSpell.userWords": [
      "Rxne",
      "absl",
      "fpgas",
      "ppus",
      "sada",
      "sadas",
      "uarts"
    ],
    "coc.preferences.extensionUpdateCheck": "daily"
}
